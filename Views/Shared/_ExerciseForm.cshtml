    @Html.ValidationMessageFor(e => e.Reps, null, new { @style = "color:red;" })
</div>

<!-- Material textarea message -->
<div class="md-form">
    <i class="fa fa-pencil prefix grey-text"></i>
    @Html.TextBoxFor(e => e.Weight, null, new { @id = "newExerciseWeight", @class = "form-control" })
    @Html.LabelFor(e => e.Weight, null, new { @for = "newExerciseWeight" })
    @Html.ValidationMessageFor(e => e.Weight, null, new { @style = "color:red;" })
</div>
