@model Exercise

<!-- Material input text -->
<div class="md-form">
    <i class="fa fa-user prefix grey-text"></i>
    @Html.TextBoxFor(e => e.Title, null, new { @id = "newExerciseTitle", @class = "form-control" })
    @Html.LabelFor(e => e.Title, null, new { @for = "newExerciseTitle" })
    @Html.ValidationMessageFor(e => e.Title, null, new { @style = "color:red;" })
</div>

<!-- Material input email -->
<div class="md-form">
    <i class="fa fa-envelope prefix grey-text"></i>
