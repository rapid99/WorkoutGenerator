@model Exercise

@using (Html.BeginForm("Create", "Exercise"))
{
    <p class="h4 text-center mb-4">New Exercise</p>
    @Html.Partial("_ExerciseForm")
    <div class="text-center mt-4">
        <button class="btn btn-success" type="submit" id="createBtn">Create<i class="fa fa-paper-plane-o ml-2"></i></button>
        @Html.ActionLink("Cancel", "Index", "Exercise", null, new { @class = "btn btn-danger" })
    </div>
}

<script>
    $('#createBtn').keypress(function (e) {
        if (e.which == 13) {
            $('#createBtn').focus().click();
            return false;
        }
    });
</script>